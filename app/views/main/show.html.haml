  slidesToShow: 1,
  slidesToScroll: 1,
  arrows: false,
  fade: true,
  asNavFor: '.center-item'
  });

  $('.sample').slick({
  slidesToShow: 3,
  slidesToScroll: 1,
  asNavFor: '.sample',
  dots: true,
  centerMode: true,
  focusOnSelect: true
  });

