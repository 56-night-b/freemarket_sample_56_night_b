  .main1.to-sign_up3
    .main1__toptext
      支払い方法
    .main1__buttomtext
      = form_for @card, url:sign_up_done_users_path, method: :get do |f|
        .field
          .field-input
            .label2
              .field-input__label
                = f.label :card_number,"カード番号"
              .required-box 必須
            .field-input__text
              = f.text_field :card_number, placeholder: '半角数字のみ',size:30
              = image_tag '/assets/logo_visa.gif'
              = image_tag '/assets/logo_mastercard.gif'
              = image_tag '/assets/saison-card-logo.gif'
              = image_tag '/assets/jcb-logomark-img-02.gif'
              = image_tag '/assets/american-express-card-logo.gif'
              = image_tag '/assets/diners_logo_white.gif'
              = image_tag '/assets/discover-card-logo.gif'
          .field-input
            .label2
              .field-input__label
                = f.label :expiration_date,"有効期限"
              .required-box 必須
            .field-input__text
              != sprintf(f.date_select(:expiration_date,with_css_classes:'expiration-date', order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月<br>') + '年'
          .field-input
            .label2
              .field-input__label
                = f.label :securitycord,"セキュリティーコード"
              .required-box 必須
            .field-input__text
              = f.text_field :securitycord, autofocus: true,placeholder: 'カードの背面４桁もしくは３桁の番号' ,size:30
              = link_to "?カードの裏面の番号とは","https://www.mercari.com/jp/"
          .actions
            = f.submit "次に進む", class: 'btn1'
  .footer.gray
