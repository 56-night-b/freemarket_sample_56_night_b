%head
%body.sign_up3
  .header2.sign_up3
    .h-top
      = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?465897195",alt:"mercari"), "https://master.tech-camp.in/"
    .h-buttom
      %ul
        .dankai-box
          %li
            %font.red 会員情報
            %font.red 
              .maru1 ●
            .box
              %hr.red 
        .dankai-box
          %li
            %font.red 電話番号認証
            %font.red 
              .maru1 ●
            .box
              %hr.red 
        .dankai-box
          %li
            %font.red 住所入力
            %font.red 
              .maru1 ●
            .box
              %hr.red 
        .dankai-box
          %li
            %font.red 支払い方法
            %font.red 
              .maru1 ●
            .box
              %hr.gray 
        .dankai-box
          %li
            %font.gray 完了
            %font.gray 
              .maru1 ●
  
  .main1.to-sign_up3
    .main1__toptext
      支払い方法
    .main1__buttomtext
      = form_for @card, url:sign_up_done_users_path, method: :get do |f|
        .field
          .field-input
            .label2
              .field-input__label
                = f.label :card_number,"カード番号"
              .required-box 必須
            .field-input__text
              = f.text_field :card_number, placeholder: '半角数字のみ',size:30
              = image_tag 'https://www.smbc-card.com/kamei/support/responsive/img/logo_visa.gif'
              = image_tag 'https://www.smbc-card.com/kamei/support/responsive/img/logo_mastercard.gif'
              = image_tag 'https://www.f-regi.com/download/cardimage/img/saison300px.gif'
              = image_tag 'https://www.f-regi.com/download/cardimage/img/jcb300px.gif'
              = image_tag 'https://www.f-regi.com/download/cardimage/img/amex300px.gif'
              = image_tag 'https://www.f-regi.com/download/cardimage/img/diners300px.gif'
              = image_tag 'https://www.discover.com/company/images/newsroom/media-downloads/discover-network@2x.png'
          .field-input
            .label2
              .field-input__label
                = f.label :expiration_date,"有効期限"
              .required-box 必須
            .field-input__text
              != sprintf(f.date_select(:expiration_date,with_css_classes:'expiration-date', order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月<br>') + '年'
          .field-input
            .label2
              .field-input__label
                = f.label :securitycord,"セキュリティーコード"
              .required-box 必須
            .field-input__text
              = f.text_field :securitycord, autofocus: true,placeholder: 'カードの背面４桁もしくは３桁の番号' ,size:30
              = link_to "?カードの裏面の番号とは","https://www.mercari.com/jp/"
          .actions
            = f.submit "次に進む", class: 'btn1'
  
  = render partial: "sign-up-footer-gray"