%header
  %h-left
    %a{href:"https://master.tech-camp.in/"}
      %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?465897195"}/
  %h-right
%main
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      .field-input
        = f.email_field :email, autofocus: true
      .field-input
        = f.password_field :password, autocomplete: "off"
      .field-input
        .g-recaptcha{"data-callback" => "validateRecaptcha", "data-sitekey" => "6Le0x78UAAAAALn6klXFzUR91sbFx0_jSxtaCVHJ"}
      .actions
        = f.submit "ログイン", class: 'btn'
%footer