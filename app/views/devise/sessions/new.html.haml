        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            .field-input
              = f.email_field :email, autofocus: true
            .field-input
              = f.password_field :password, autocomplete: "off"
            .field-input
              .g-recaptcha{"data-callback" => "validateRecaptcha", "data-sitekey" => "6Le0x78UAAAAALn6klXFzUR91sbFx0_jSxtaCVHJ"}
            .actions
              = f.submit "ログイン", class: 'sign-up-btn'
        .forget-pass
          = link_to "パスワードを忘れた方","https://www.mercari.com/jp/password/reset/start/"

